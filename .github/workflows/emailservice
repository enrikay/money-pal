name: Email Service Deploy
on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]

    paths:
      - "money-pal/emailService/**"
      - ".github/workflows/emailservice.yml"

jobs:
  build:
    runs-on: ubuntu-latest
    defaults:
      run: 
        working-directory: ./emailService
    steps:
    - uses: actions/checkout@v3
    - name: Use Node.js
      uses: actions/setup-node@v3
      with:
        node-version: '16.x'
        cache: 'npm'
        cache-dependency-path: ./emailService/package-lock.json
    - name: Install Dependencies
      run: npm install
    - name: Build
      run: npm run build --if present
    - name: Test
      run: npm test
